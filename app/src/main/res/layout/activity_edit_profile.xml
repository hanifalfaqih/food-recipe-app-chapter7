<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="@dimen/_12sdp"
    tools:context=".ui.editprofile.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent>">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_button_back"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_edit_profile_back_button"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_left" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_edit_profile_title"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_27sdp"
                android:fontFamily="@font/poppins_600_semibold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/font_black_color"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Edit Profile" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civ_edit_profile_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_38sdp"
                android:src="@drawable/ic_edit_profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_edit_profile_title" />

            <TextView
                android:id="@+id/tv_change_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppins_600_semibold"
                android:textAlignment="center"
                android:textColor="@color/font_primary_color"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/civ_edit_profile_image"
                tools:text="Change profile photo" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edit_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_change_profile_picture">

                <EditText
                    android:id="@+id/et_edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_400_regular"
                    android:hint="Profile name"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/font_grey_color" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edit_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_edit_profile_name">

                <EditText
                    android:id="@+id/et_edit_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_400_regular"
                    android:hint="Username"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/font_grey_color" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edit_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_edit_profile_username">

                <EditText
                    android:id="@+id/et_edit_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_400_regular"
                    android:hint="Email"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/font_grey_color" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:cornerRadius="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_700_bold"
                app:layout_constraintTop_toBottomOf="@id/cv_edit_profile_email"
                tools:text="SAVE" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>